# Base paths
DATA_DIR=./data
PDF_DIR=./data/pdfs
CHROMA_DIR=./data/chroma
DB_PATH=./data/registry.sqlite
LOG_LEVEL=INFO

# Scraper
BASE_URL=https://sjservicios.csjn.gov.ar/sj/tomosFallos.do?method=iniciar
MIN_YEAR=1994
REQUEST_TIMEOUT=45
REQUEST_DELAY_SECONDS=1.5
USER_AGENT=botsentencias/1.0 (+contacto@example.com)

# Embeddings backend: sentence-transformers (local) or openai
EMBEDDING_BACKEND=sentence-transformers
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# LLM backend: local-echo, ollama, openai, anthropic
LLM_BACKEND=local-echo
LLM_MODEL=llama3.1:8b
OPENAI_CHAT_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=

# Retrieval
TOP_K=8
BM25_K=6
CHUNK_MAX_TOKENS=1000
CHUNK_OVERLAP_TOKENS=100
